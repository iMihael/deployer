doctype html
html(ng-app='app')
    head
        title(ng-bind="title")
        link(rel='stylesheet', href='js/bower_components/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='stylesheets/style.css')
        link(rel='stylesheet', href='js/bower_components/angular-growl-v2/build/angular-growl.min.css')
        link(rel='icon', href='favicon.ico', type='image/x-icon')
        link(rel='shortcut icon', href='favicon.ico', type='image/x-icon')

        script(type='text/javascript', src='js/bower_components/jquery/dist/jquery.min.js')
        script(type='text/javascript', src='js/bower_components/bootstrap/dist/js/bootstrap.min.js')
        script(type='text/javascript', src='js/bower_components/angular/angular.min.js')
        script(type='text/javascript', src='js/bower_components/angular-loading-bar/build/loading-bar.min.js')
        script(type='text/javascript', src='js/bower_components/angular-route/angular-route.min.js')
        script(type='text/javascript', src='js/bower_components/angular-resource/angular-resource.min.js')
        script(type='text/javascript', src='js/bower_components/angular-bootstrap/ui-bootstrap.min.js')
        script(type='text/javascript', src='js/bower_components/angular-growl-v2/build/angular-growl.min.js')
        script(type='text/javascript', src='js/angular-drag-and-drop-lists.min.js')
        script(type='text/javascript', src='js/socket.io-1.3.7.js')
        script(type='text/javascript', src='js/ui-bootstrap-tpls-0.13.0.min.js')

        script(type='text/javascript', src='js/app.js')
    body
        div(growl='')
        nav(class='navbar navbar-default')
            .container-fluid
                .navbar-header
                    button(type='button', class='navbar-toggle', ng-click='navbarCollapsed = !navbarCollapsed')
                        span(class='sr-only') Toggle navigation
                        span(class='icon-bar')
                        span(class='icon-bar')
                        span(class='icon-bar')

                    a(class='navbar-brand', href='#/') Deployer

                div(collapse='!navbarCollapsed', class='collapse navbar-collapse')

                    ul(class='nav navbar-nav navbar-right')
                        li
                            a(href='#/item') Menu Item

        div(class='container-fluid' ng-view)
            block content